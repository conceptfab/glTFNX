{
  "id": "scene-default",
  "name": "Domy≈õlna scena",
  "description": "Standardowa scena",
  "category": "scene",
  "renderer": {
    "toneMapping": "ACESFilmicToneMapping",
    "toneMappingExposure": 1.0,
    "outputEncoding": "sRGBEncoding",
    "alpha": false
  },
  "postprocessing": {
    "enabled": true,
    "effects": {
      "EffectComposer": { "enabled": true },
      "RenderPass": { "enabled": true },
      "ShaderPass": { "enabled": true },
      "UnrealBloomPass": {
        "enabled": true,
        "strength": 1.0,
        "radius": 0.4,
        "threshold": 0.85
      },
      "SSAOPass": {
        "enabled": true,
        "radius": 0.2,
        "intensity": 1.0,
        "bias": 0.1
      },
      "FXAAPass": { "enabled": true },
      "BokehPass": {
        "enabled": false,
        "focus": 0.5,
        "aperture": 0.0001,
        "maxblur": 0.01
      }
    }
  },
  "cameras": {
    "default": {
      "fov": 50,
      "near": 0,
      "far": 100,
      "position": {
        "x": 0.5,
        "y": 1,
        "z": 2
      },
      "target": {
        "x": 0,
        "y": 1,
        "z": 0
      }
    },
    "back": {
      "fov": 45,
      "near": 0.25,
      "far": 2000,
      "position": {
        "x": 0.5,
        "y": 1,
        "z": 2
      },
      "target": {
        "x": 0,
        "y": 1,
        "z": 0
      }
    },
    "top": {
      "fov": 45,
      "near": 0.25,
      "far": 2000,
      "position": {
        "x": 0,
        "y": 50,
        "z": 0
      },
      "target": {
        "x": 0,
        "y": 0,
        "z": 0
      }
    }
  },
  "background": {
    "color": "#ffffff",
    "opacity": 1.0
  },
  "environment": {
    "enabled": true,
    "path": "/textures/",
    "files": [
      "posx.jpg",
      "negx.jpg",
      "posy.jpg",
      "negy.jpg",
      "posz.jpg",
      "negz.jpg"
    ],
    "colorSpace": "sRGBEncoding"
  },
  "lighting": {
    "enabled": true,
    "visible": true,
    "ambient": {
      "enabled": false,
      "intensity": 0.5,
      "color": "#ffffff"
    },
    "hemisphere": {
      "enabled": false,
      "intensity": 1.0,
      "skyColor": "#87CEEB",
      "groundColor": "#8B4513"
    }
  },
  "lights": [
    {
      "type": "DirectionalLight",
      "name": "main_light",
      "enabled": true,
      "color": 16115446,
      "intensity": 0.8,
      "position": {
        "x": 50,
        "y": 50,
        "z": 50
      },
      "helper": {
        "visible": false,
        "size": 7.5
      },
      "castShadow": true
    }
  ],
  "axis": {
    "length": 5,
    "visible": false
  },
  "grid": {
    "size": 125,
    "divisions": 25,
    "visible": false
  },
  "floor": {
    "type": "contact",
    "enabled": true,
    "position": {
      "y": -0.3
    },
    "material": {
      "type": "physical",
      "color": "#ffffff",
      "opacity": 1.0,
      "roughness": 0.5,
      "metalness": 0.0
    }
  },
  "shadows": {
    "type": "contact",
    "enabled": true,
    "blur": {
      "amount": 3.5,
      "samples": 8
    },
    "darkness": 1.0,
    "opacity": 1.0
  },
  "controls": {
    "enableDamping": true,
    "dampingFactor": 0.05,
    "rotateSpeed": 0.8,
    "panSpeed": 0.8,
    "zoomSpeed": 1.2,
    "minDistance": 1,
    "maxDistance": 500,
    "minPolarAngle": 0,
    "maxPolarAngle": 3.14159,
    "enablePan": true,
    "enableRotate": true,
    "enableZoom": true
  }
}
